<%- include('header') %>

            <!-- Table Start -->
            <center>
                <div class="container-fluid pt-4 px-4">
                    <img src="<%= ddata.doctorimg %>" alt="image" width="150" style="border-radius: 50%; margin-bottom: 20px;">
                    <div class="row g-4" style="justify-content: center;">
                        <div class="col-sm-12 col-xl-6">
                            <div class="bg-light rounded h-100 p-4">
                                <h6 class="mb-4">Show Doctor Details</h6>
                                <table class="table table-hover">
                                    <tbody>
                                        <tr>
                                            <th scope="row">Name</th>
                                            <td><%= ddata.name %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Email</th>
                                            <td><%= ddata.email %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Specialization</th>
                                            <td><%= ddata.specializationid.specialization %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Consultancy Fees</th>
                                            <td><%= ddata.consultancy_fees %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Gender</th>
                                            <td><%= ddata.gender %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Contact No.</th>
                                            <td><%= ddata.contact_no %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">City</th>
                                            <td><%= ddata.city %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Role</th>
                                            <td><%= ddata.role %></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Created Date</th>
                                            <td><%= ddata.created_date %></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </center>
            <!-- Table End -->

<%- include('footer') %>