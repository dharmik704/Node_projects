<%- include('user_header') %>

            <!-- Table Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                          <div class="card-body">
                            <h4 class="card-title">Show Appointments</h4>
                            <div class="table-responsive">
                              <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">No.</th>
                                        <th scope="col">Dr. Name</th>
                                        <th scope="col">Dr. Specialization</th>
                                        <th scope="col">Date</th>
                                        <th scope="col">Time</th>
                                        <th scope="col">Status</th>
                                        <th colspan="2" scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% var i=1 %>
                                    <% for(adata of appdata){ %> 
                                    <tr>
                                        <th style="padding: 20px 10px;"><%= i++ %></th>
                                        <td style="padding: 20px 7px;"><%= adata.doctorid.name %></td>
                                        <td style="padding: 20px 7px;"><%= adata.doctorid.specializationid.specialization %></td>
                                        <td style="padding: 20px 7px;"><%= adata.date %></td>
                                        <td style="padding: 20px 7px;"><%= adata.time %></td>
                                        <td style="padding: 20px 7px;">
                                            <% if(adata.ustatus && adata.dstatus && adata.d2status == false){ %> 
                                                <a style="text-decoration: none; color: rgb(172, 108, 255);">Active</a>
                                            <% }else if(adata.ustatus && adata.dstatus && adata.d2status ){ %> 
                                                <a class="text-success" style="text-decoration: none; color: green;">Done</a>
                                            <% }else if(adata.ustatus == true && adata.dstatus == false){ %> 
                                                <a style="color: rgb(255, 83, 83); text-decoration: none;">Cancelled By Doctor</a>
                                            <% }else if(adata.ustatus == false && adata.dstatus == true){ %> 
                                                <a style="color: rgb(255, 83, 83); text-decoration: none;">Cancelled By You</a>
                                            <% } %>
                                        </td>
                                        <% if(adata.ustatus && adata.dstatus && adata.d2status == false){ %> 
                                            <td style="padding: 20px 7px;">
                                                <a href="/user/deactive/<%= adata.id %>" style="color: rgb(255, 83, 83); text-decoration: none;">Cancle</a>
                                            </td>
                                        <% }else if(adata.ustatus && adata.dstatus && adata.d2status){ %> 
                                            <td style="padding: 20px 7px;">
                                                <a href="/user/deactive/<%= adata.id %>" style="color: rgb(255, 83, 83); text-decoration: none; display: none;">Cancle</a>
                                            </td>
                                        <% }else if(adata.ustatus == true && adata.dstatus == false && adata.d2status == false){ %> 
                                            <td style="padding: 20px 7px;">
                                                <a href="/user/deactive/<%= adata.id %>" style="color: rgb(255, 83, 83); text-decoration: none; display: none;">Cancle</a>
                                            </td>
                                        <% }else if(adata.ustatus == false && adata.dstatus == true && adata.d2status == false){ %> 
                                            <td style="padding: 20px 7px;">
                                                <a href="/user/deactive/<%= adata.id %>" style="color: rgb(255, 83, 83); text-decoration: none; display: none;">Cancle</a>
                                            </td>
                                        <% } %>
                                    </tr>
                                    <% } %>
                                </tbody>
                              </table>
                            </div>
                          </div>
                        </div>
                      </div>
                </div>
            </div>
            <!-- Table End -->

<%- include('user_footer') %>