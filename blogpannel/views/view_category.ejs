<%- include('header') %>


            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid" style="text-align: center;">
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-header m-b-30">
                                    <input class="au-input au-input--xl" value="<%= search %>" type="text" name="search" placeholder="Search for category" />
                                    <button class="au-btn--submit" type="submit">
                                        <i class="zmdi zmdi-search"></i>
                                    </button>
                                    <button class="au-btn--submit" style="margin-left: 20px;">
                                        <a href="/admin/category/view_category" style="color: white; padding: 0 20px;">Reset</a>
                                    </button>
                                </form>
                                <div class="table-responsive table--no-card m-b-30">
                                    <table class="table table-borderless table-striped table-earning">
                                        <form action="/admin/deletemulcategory" method="post">
                                            <table class="table table-borderless table-striped table-earning">
                                                <thead>
                                                    <tr>
                                                        <th>No.</th>
                                                        <th>Category</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% var i=1 %>
                                                    <% for(cdata of categorydata){ %> 
                                                        <tr>
                                                            <td><%= i++ %></td>
                                                            <td><%= cdata.category %></td>
                                                            <td>
                                                                <% if(cdata.status){ %> 
                                                                    <a href="/admin/category/deactive/<%= cdata.id %>" class="text-success">Active</a>
                                                                <% }else{ %> 
                                                                    <a href="/admin/category/active/<%= cdata.id %>" class="text-danger">Deactive</a>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <a href="/admin/category/deletecategory/<%= cdata.id %>">
                                                                    <i class="fa fa-trash"></i>
                                                                </a> ||
                                                                <a href="/admin/category/updatecategory/?id=<%= cdata.id %>">
                                                                    <i class="fa fa-edit"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </form>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <%- include('pegination') %>

<%- include('footer') %>