<%- include('header') %>


            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid" style="text-align: center;">
                        <div class="row">
                            <div class="col-lg-12">

                                <form class="form-header m-b-30">
                                    <input class="au-input au-input--xl" value="<%= search %>" type="text" name="search" placeholder="Search for title" />
                                    <button class="au-btn--submit" type="submit">
                                        <i class="zmdi zmdi-search"></i>
                                    </button>
                                    <button class="au-btn--submit" style="margin-left: 20px;">
                                        <a href="/admin/slider/view_slider" style="color: white; padding: 0 20px;">Reset</a>
                                    </button>
                                </form>

                                <div class="table-responsive table--no-card m-b-30">
                                    <form action="/admin/slider/deletemultislider" method="post">
                                        <table class="table table-borderless table-striped table-earning">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        <input type="checkbox" id="CheckAll">
                                                        <button type="submit" style="margin-left: 5px; color: white;"><i class="fa fa-trash"></i></button>
                                                    </th>
                                                    <th>No.</th>
                                                    <th>Title</th>
                                                    <th>Link</th>
                                                    <th>Description</th>
                                                    <th>SliderImage</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% var i=1 %>
                                                <% for(sdata of sliderdata){ %> 
                                                    <tr>
                                                        <td><input type="checkbox" value="<%= sdata.id %>" name="sliderids[]"></td>
                                                        <td><%= i++ %></td>
                                                        <td><%= sdata.title %></td>
                                                        <td><%= sdata.link %></td>
                                                        <td><%= sdata.description %></td>
                                                        <td><img src="<%= sdata.sliderimage %>" alt="image" height="100"></td>
                                                        <td>
                                                            <% if(sdata.status){ %> 
                                                                <a href="/admin/slider/deactive/<%= sdata.id %>" class="text-success">Active</a>
                                                            <% }else{ %> 
                                                                <a href="/admin/slider/active/<%= sdata.id %>" class="text-danger">Deactive</a>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/slider/deleteslider/<%= sdata.id %>">
                                                                <i class="fa fa-trash"></i>
                                                            </a> ||
                                                            <a href="/admin/slider/updateslider/?id=<%= sdata.id %>">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <%- include('pegination') %>

<%- include('footer') %>