<%- include('header') %>


            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid" style="text-align: center;">
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-header m-b-30">
                                    <input class="au-input au-input--xl" value="<%= search %>" type="text" name="search" placeholder="Search for title" />
                                    <button class="au-btn--submit" type="submit">
                                        <i class="zmdi zmdi-search"></i>
                                    </button>
                                    <button class="au-btn--submit" style="margin-left: 20px;">
                                        <a href="/admin/offer/view_offer" style="color: white; padding: 0 20px;">Reset</a>
                                    </button>
                                </form>
                                <div class="table-responsive table--no-card m-b-30">
                                    <form action="/admin/offer/deletemultioffer" method="post">
                                        <table class="table table-borderless table-striped table-earning">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        <input type="checkbox" id="CheckAll">
                                                        <button type="submit" style="margin-left: 5px; color: white;"><i class="fa fa-trash"></i></button>
                                                    </th>
                                                    <th>No.</th>
                                                    <th>Icon</th>
                                                    <th>Title</th>
                                                    <th>Description</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% var i=1 %>
                                                <% for(odata of offerdata){ %> 
                                                    <tr>
                                                        <td><input type="checkbox" value="<%= odata.id %>" name="offerids[]"></td>
                                                        <td><%= i++ %></td>
                                                        <td><i class="fa fa-<%= odata.icon %>"></i></td>
                                                        <td><%= odata.title %></td>
                                                        <td><%= odata.description.substr(0, 50) %>...</td>
                                                        <td>
                                                            <% if(odata.status){ %> 
                                                                <a href="/admin/offer/deactive/<%= odata.id %>" class="text-success">Active</a>
                                                            <% }else{ %> 
                                                                <a href="/admin/offer/active/<%= odata.id %>" class="text-danger">Deactive</a>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/offer/deleteoffer/<%= odata.id %>">
                                                                <i class="fa fa-trash"></i>
                                                            </a> ||
                                                            <a href="/admin/offer/updateoffer/?id=<%= odata.id %>">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <%- include('pegination') %>

<%- include('footer') %>