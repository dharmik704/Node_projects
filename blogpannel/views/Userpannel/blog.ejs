<%- include('user_header') %>

<section class="page-heading wow fadeIn" data-wow-duration="1.5s" style="background-image: url(files/images/01-heading.jpg)">
    <div class="container">
        <div class="page-name">
            <h1>Our Blog</h1>
            <span>Lovely layout of heading</span>
        </div>
    </div>
</section>

<section class="on-blog-grid">
    <div class="container">
        <div class="row">
            <% for(bdata of postdata){ %> 
                <div class="col-md-4">
                    <div class="blog-item">
                        <a href="blog-single.html"><img src="<%= bdata.postimage %>" alt="" height="200"></a>
                        <h3><a href="blog-single.html"><%= bdata.title %></a></h3>
                        <span><a href="#"><%= bdata.username %></a> / <a href="#"><%= bdata.create_date %></a> / <a href="#"><%= bdata.category %></a></span>
                        <p><%= bdata.description.substr(0,110) %>...</p>
                        <div class="read-more">
                            <a href="blog-single.html">Read more</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>	
</section>

<%- include('user_footer') %>