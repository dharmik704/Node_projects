<%- include('header') %>

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Update Post</strong>
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="/admin/post/editpost/<%= singlepost.id %>" method="post" enctype="multipart/form-data" class="form-horizontal">
                                            
                                            <% var category = ['Politics','Bollywood','Traveling','Food','Sports'] %>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Category</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="category" class="form-control">
                                                        <option value="">-- select category --</option>
                                                        <% category.map((v,i) => { %>
                                                            <option value="<%= v %>" <% if(singlepost.category==v){ %> <%= 'selected' %> <% } %>><%= v %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Title</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" value="<%= singlepost.title %>" id="text-input" name="title" placeholder="enter a slider title" class="form-control">
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">Description</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="description" id="textarea-input" rows="5" placeholder="description..." class="form-control"><%= singlepost.description %></textarea>
                                                </div>
                                            </div>
                                            
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-input" class=" form-control-label">Upload Image</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-input" name="postimage" class="form-control-file">
                                                    <img src="<%= singlepost.postimage %>" alt="postimage" width="150" style="margin-top: 10px;">
                                                </div>
                                            </div>
                                            
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-dot-circle-o"></i> Update Post
                                                </button>
                                                <button type="reset" class="btn btn-danger btn-sm">
                                                    <i class="fa fa-ban"></i> Reset
                                                </button>
                                            </div>

                                        </form>
                                    </div>
                                    
                                </div>
                                
                            </div>

                        </div>

<%- include('footer') %>