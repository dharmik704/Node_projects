<%- include('header') %>

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">

                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Update Reviews</strong>
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="/admin/reviews/editreviews/<%= singlereview.id %>" method="post" class="form-horizontal">
                                            
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">Description</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="description" id="textarea-input" rows="5" placeholder="description..." class="form-control"><%= singlereview.description %></textarea>
                                                </div>
                                            </div>

                                            <% var country = ['India','Australia','France','USA','New Zealand'] %>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Country</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="country" class="form-control">
                                                        <option value="">-- select sountry --</option>
                                                        <% country.map((v,i) => { %>
                                                            <option value="<%= v %>" <% if(singlereview.country==v){ %> <%= 'selected' %> <% } %>><%= v %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>

                                            <% var state = ['Gujarat','Tasmania','Corsica','California','Nelson'] %>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">State</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="state" class="form-control">
                                                        <option value="">-- select state --</option>
                                                        <% state.map((v,i) => { %>
                                                            <option value="<%= v %>" <% if(singlereview.state==v){ %> <%= 'selected' %> <% } %>><%= v %></option>
                                                        <% }) %>
                                                    </select>
                                                </div>
                                            </div>
                                            
                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-dot-circle-o"></i> Update Review
                                                </button>
                                                <button type="reset" class="btn btn-danger btn-sm">
                                                    <i class="fa fa-ban"></i> Reset
                                                </button>
                                            </div>

                                        </form>
                                    </div>
                                    
                                </div>
                                
                            </div>

                        </div>

<%- include('footer') %>