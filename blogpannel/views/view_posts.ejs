<%- include('header') %>


            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid" style="text-align: center;">
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-header m-b-30">
                                    <input class="au-input au-input--xl" value="<%= search %>" type="text" name="search" placeholder="Search for name and category" />
                                    <button class="au-btn--submit" type="submit">
                                        <i class="zmdi zmdi-search"></i>
                                    </button>
                                    <button class="au-btn--submit" style="margin-left: 20px;">
                                        <a href="/admin/post/view_post" style="color: white; padding: 0 20px;">Reset</a>
                                    </button>
                                </form>
                                <div class="table-responsive table--no-card m-b-30">
                                    <form action="/admin/post/deletemultipost" method="post">
                                        <table class="table table-borderless table-striped table-earning">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        <input type="checkbox" id="CheckAll">
                                                        <button type="submit" style="margin-left: 5px; color: white;"><i class="fa fa-trash"></i></button>
                                                    </th>
                                                    <th>No.</th>
                                                    <th>Username</th>
                                                    <th>Category</th>
                                                    <th>Title</th>
                                                    <th>Description</th>
                                                    <th>PostImage</th>
                                                    <th>Create Date</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% var i=1 %>
                                                <% for(pdata of postdata){ %> 
                                                    <tr>
                                                        <td><input type="checkbox" value="<%= pdata.id %>" name="postids[]"></td>
                                                        <td><%= i++ %></td>
                                                        <td><%= pdata.username %></td>
                                                        <td><%= pdata.category %></td>
                                                        <td><%= pdata.title.substr(0,30) %>...</td>
                                                        <td><%= pdata.description.substr(0,50) %>...</td>
                                                        <td><img src="<%= pdata.postimage %>" alt="image" height="100"></td>
                                                        <td><%= pdata.create_date %></td>
                                                        <td>
                                                            <% if(pdata.status){ %> 
                                                                <a href="/admin/post/deactive/<%= pdata.id %>" class="text-success">Active</a>
                                                            <% }else{ %> 
                                                                <a href="/admin/post/active/<%= pdata.id %>" class="text-danger">Deactive</a>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/post/deletepost/<%= pdata.id %>">
                                                                <i class="fa fa-trash"></i>
                                                            </a> ||
                                                            <a href="/admin/post/updatepost/?id=<%= pdata.id %>">
                                                                <i class="fa fa-edit"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <%- include('pegination') %>

<%- include('footer') %>