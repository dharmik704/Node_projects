<%- include('header') %>


            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid" style="text-align: center;">
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-header m-b-30">
                                    <input class="au-input au-input--xl" value="<%= search %>" type="text" name="search" placeholder="Search for name and country" />
                                    <button class="au-btn--submit" type="submit">
                                        <i class="zmdi zmdi-search"></i>
                                    </button>
                                    <button class="au-btn--submit" style="margin-left: 20px;">
                                        <a href="/admin/reviews/view_reviews" style="color: white; padding: 0 20px;">Reset</a>
                                    </button>
                                </form>
                                <div class="table-responsive table--no-card m-b-30">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>No.</th>
                                                <th>Username</th>
                                                <th>Description</th>
                                                <th>Country</th>
                                                <th>State</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% var i=1 %>
                                            <% for(rdata of reviewdata){ %> 
                                                <tr>
                                                    <td><%= i++ %></td>
                                                    <td><%= rdata.username %></td>
                                                    <td><%= rdata.description.substr(0, 50) %>...</td>
                                                    <td><%= rdata.country %></td>
                                                    <td><%= rdata.state %></td>
                                                    <td>
                                                        <a href="/admin/reviews/deletereview/<%= rdata.id %>">
                                                            <i class="fa fa-trash"></i>
                                                        </a> ||
                                                        <a href="/admin/reviews/updatereview/?id=<%= rdata.id %>">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <%- include('pegination') %>

<%- include('footer') %>